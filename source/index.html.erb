---
title: Circle Animation
---

<div class="container container--main">
  <div class="header">
    <div class="container">
      <h1 class="header__title">Circles Test</h1>
    </div>
  </div>
  <div class="circles">
    <% data.heroes.items.each_with_index do |f, index| %>
      <div class="circle" data-x="<%= f.x %>" data-y="<%= f.y %>" data-s="<%= f.s %>">
        <div class="circle__opacity">
          <div class="circle__jitter">
            <div class="circle__scale">
              <img class="circle__image" src="images/<%= f.image %>"></div>
          </div>
        </div>
        <div class="circle__center"></div>
      </div>
    <% end %>
  </div>
</div>
